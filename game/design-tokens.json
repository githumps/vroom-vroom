  "breakpoints": {
    "mobile": "640px",
    "tablet": "1024px",
    "desktop": "1280px",
    "wide": "1600px"
  },

  "componentStates": {
    "button": {
      "default": {
        "background": "var(--color-bg-deep)",
        "border": "2px solid",
        "shadow": "0 0 10px currentColor"
      },
      "hover": {
        "transform": "translateY(-2px)",
        "shadow": "0 0 20px currentColor, 0 4px 8px rgba(0,0,0,0.4)"
      },
      "active": {
        "transform": "translateY(0)",
        "shadow": "0 0 10px currentColor, inset 0 0 10px currentColor"
      },
      "disabled": {
        "opacity": 0.4,
        "cursor": "not-allowed"
      }
    },
    "input": {
      "default": {
        "background": "var(--color-bg-medium)",
        "border": "2px solid var(--color-border-medium)"
      },
      "focus": {
        "border": "2px solid var(--color-primary-cyan)",
        "shadow": "0 0 20px var(--color-glow-cyan)"
      },
      "error": {
        "border": "2px solid var(--color-error)"
      },
      "success": {
        "border": "2px solid var(--color-success)"
      }
    },
    "card": {
      "default": {
        "background": "var(--color-surface-dark)",
        "border": "2px solid var(--color-border-medium)"
      },
      "hover": {
        "transform": "translateY(-4px)",
        "border": "2px solid var(--color-primary-cyan)",
        "shadow": "0 0 20px var(--color-glow-cyan)"
      }
    }
  },

  "atmosphericEffects": {
    "vignette": {
      "gradient": "radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.4) 100%)"
    },
    "scanlines": {
      "pattern": "repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0,0,0,0.1) 2px, rgba(0,0,0,0.1) 4px)"
    },
    "chromaticAberration": {
      "offsetX": "2px",
      "opacity": 0.5
    },
    "glow": {
      "pink": "0 0 20px var(--color-primary-pink-glow)",
      "purple": "0 0 20px var(--color-primary-purple-glow)",
      "teal": "0 0 20px var(--color-primary-teal-glow)",
      "cyan": "0 0 20px var(--color-primary-cyan-glow)"
    }
  }
